<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_secondary"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="serif"
            android:textColor="@color/text_primary"
            android:textSize="34sp"
            tools:text="User" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            tools:text="user@example.com" />

        <!-- Edit Profile Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_profile2"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Edit Profile"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                app:drawableTint="@color/theme_accent" />
        </androidx.cardview.widget.CardView>

        <!-- Booking History Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_booking_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_history"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Booking History"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                app:drawableTint="@color/theme_accent" />
        </androidx.cardview.widget.CardView>

        <!-- Travel Dates Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_travel_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cal"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="Preferred Travel Dates"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    app:drawableTint="@color/theme_accent" />
                <TextView
                    android:id="@+id/travel_dates_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="4dp"
                    android:text="Not set. Tap to select."
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Promotions Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_promotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_offer"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Promotions"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                app:drawableTint="@color/theme_accent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_attractions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Nearby Attractions"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                app:drawableTint="@color/theme_accent" />
        </androidx.cardview.widget.CardView>


        <!-- Logout Button at the bottom -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/theme_primary"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
